<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Cinematic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/acrom_light</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="TextAppearance.Cinematic.MovieTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cinematic.MovieDetailsTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cinematic.MovieRelease">
        <item name="fontFamily">@font/acrom_light</item>
        <item name="android:textColor">@color/release_date</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Cinematic.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cinematic.CastValuesTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Cinematic.CastValues">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cinematic.TabLayout.DirectorAndRelease">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/release_and_director</item>
    </style>

    <style name="TextAppearance.Cinematic.TabLayout.PlaceOfBirthday">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/release_and_director</item>
    </style>

    <style name="TextAppearance.Cinematic.ActorName">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="TextAppearance.Cinematic.ActorCharacter">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/release_and_director</item>
    </style>

    <style name="TextAppearance.Cinematic.MovieSubtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Cinematic.Rating">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Cinematic.GenreList">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="CustomRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:rating">4</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/pink</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:scaleY">0.8</item>
    </style>
</resources>